<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pucsp.locar.Inicial">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLogo"
        android:src="@drawable/locar_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


        <Button
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_columnWeight=".50"
            android:text="Registrar"
            android:id="@+id/bt_registrar"
            android:background="@color/colorPrimary"
            android:layout_alignTop="@+id/bt_entrar"
            android:layout_alignRight="@+id/bt_entrar_facebook"
            android:layout_alignEnd="@+id/bt_entrar_facebook"
            android:onClick="pagina_registrar"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_columnWeight=".50"
            android:text="Entrar"
            android:id="@+id/bt_entrar"
            android:background="@color/colorPrimary"
            android:layout_above="@+id/bt_entrar_facebook"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:onClick="pagina_login"/>

    <com.facebook.login.widget.LoginButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_entrar_facebook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

</RelativeLayout>
