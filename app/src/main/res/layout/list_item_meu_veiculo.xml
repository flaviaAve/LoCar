<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ivVeiculo"
        android:src="@drawable/sports_car_128"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvVeiculo"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignTop="@+id/bt_excluir"
        android:layout_toStartOf="@+id/bt_excluir"
        android:layout_alignBottom="@+id/bt_excluir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_excluir"
        android:src="@drawable/ic_excluir"
        android:layout_gravity="right"
        android:layout_below="@+id/ivVeiculo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"/>


</RelativeLayout>